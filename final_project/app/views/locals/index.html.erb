 <body>
    	
        <span class="searching">
            <%= form_tag locals_search_path, :method => 'post' do %>
            <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search" %>
            </p>
            <% end %>
        </span>
        
        <div class="info">

            <div class="restaurante1">

            <img class="lupa" src="../ic_search_black_48dp.png"> Resultados filtrados...
            <hr>

            <% @locals.each do |local| %>
            <p><%= link_to local.name, local_path(local) %>
            <% if local.celiacous_food == true %>
                 <img class="icono" src="celiaco.png">
            <% end %>
            <% if local.vegetarian_food == true %>
                 <img class="icono" src="zanahoria.png">
            <% end %>
            <% if local.vegan_food == true %>
                 <img class="icono" src="vegano.png">
            <% end %>
                <span class="direction1"> - <%= local.location %> </span><br>
            <hr>
            <% end %>

            </div>
        </div>
</div>

        <script type="text/javascript" src=""></script>
</body>

    








